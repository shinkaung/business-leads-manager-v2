{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "js/**/*.js", "use": "@vercel/static" },
    { "src": "css/**/*.css", "use": "@vercel/static" },
    { "src": "backend/api/**/*.php", "use": "@vercel/php" }
  ],
  "routes": [
    { "src": "/backend/api/(.*)", "dest": "/backend/api/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
} 